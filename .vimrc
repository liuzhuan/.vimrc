set autoindent
set linebreak
set cursorline
set number
set hlsearch
set tabstop=4
syntax on

inoremap jk <ESC>

" Changing the leader key
let mapleader = "\<Space>"

" Remapping CAPSLOCK to Ctrl at operating system level

filetype plugin indent on
set encoding=utf-8

" spell checking
set spell spelllang=en_us
nnoremap <leader>f 1z=

colorscheme desert
